<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/launches_activity_launch_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#400498"
                tools:text="Error"/>

        <TextView
                android:id="@+id/launches_activity_launch_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Apr 9, 2013"/>

        <TextView
                android:id="@+id/launches_activity_launch_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0068646"/>

        <TextView
                android:id="@+id/launches_activity_launch_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Some Place, AT"/>

        <TextView
                android:id="@+id/launches_activity_launch_missions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mission 1"/>

        <TextView
                android:id="@+id/launches_activity_launch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Launch 1"/>

        <TextView
                android:id="@+id/launches_activity_launch_rocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Rocket 5"/>

    </LinearLayout>

</ScrollView>