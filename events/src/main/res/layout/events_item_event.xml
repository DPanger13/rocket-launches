<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/base_margin_card_vertical"
        android:paddingEnd="@dimen/base_margin_window_default"
        android:paddingStart="@dimen/base_margin_window_default"
        android:paddingTop="@dimen/base_margin_card_vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Card">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/events_item_event_label_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/base_margin_card_label_vertical"
                    android:paddingEnd="@dimen/base_padding_card_default"
                    android:paddingStart="@dimen/base_padding_card_default"
                    android:paddingTop="@dimen/base_margin_card_label_vertical"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_title"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="?android:colorPrimary">

                <TextView
                        android:id="@+id/events_item_event_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/events_label_event_massive"
                        style="@style/AppTheme.Text.Caption"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/events_item_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_padding_card_default"
                    android:layout_marginStart="@dimen/base_padding_card_default"
                    android:layout_marginTop="@dimen/base_padding_card_default"
                    android:alpha="@dimen/base_opacity_primary"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/events_item_event_label_container"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Scratch Sessions"
                    style="@style/AppTheme.Text.H6"/>

            <TextView
                    android:id="@+id/events_item_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/base_padding_card_default"
                    android:alpha="@dimen/base_opacity_primary"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_city"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/events_item_event_title"
                    tools:text="May 9"
                    style="@style/AppTheme.Text.Subtitle1"/>

            <TextView
                    android:id="@+id/events_item_event_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_padding_card_default"
                    android:layout_marginStart="@dimen/base_padding_card_default"
                    android:alpha="@dimen/base_opacity_secondary"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/events_item_event_date"
                    tools:text="Dallas"
                    style="@style/AppTheme.Text.Subtitle1"/>

            <View
                    android:id="@+id/events_item_event_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_height_divider"
                    android:background="?dividerColor"
                    app:layout_constraintTop_toBottomOf="@id/events_item_event_city"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_headliner_label"/>

            <TextView
                    android:id="@+id/events_item_event_headliner_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/base_min_height_list_item_one_line"
                    android:layout_marginEnd="@dimen/base_padding_card_default"
                    android:layout_marginStart="@dimen/base_padding_card_default"
                    android:alpha="@dimen/base_opacity_primary"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/base_margin_list_item_one_line_vertical_text_only"
                    android:paddingTop="@dimen/base_margin_list_item_one_line_vertical_text_only"
                    android:text="@string/events_label_headliner"
                    app:layout_constraintTop_toBottomOf="@id/events_item_event_divider"
                    app:layout_constraintBottom_toTopOf="@id/events_item_event_headliner_container"
                    style="@style/AppTheme.Text.Overline"/>

            <LinearLayout
                    android:id="@+id/events_item_event_headliner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/base_min_height_list_item_two_line_text_only"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/base_margin_list_item_two_line_vertical_text_only"
                    android:paddingTop="@dimen/base_margin_list_item_two_line_vertical_text_only"
                    app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                        android:id="@+id/events_item_event_headliner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_padding_card_default"
                        android:layout_marginStart="@dimen/base_padding_card_default"
                        android:alpha="@dimen/base_opacity_primary"
                        tools:text="Stafford Brothers"
                        style="@style/AppTheme.Text.Body1"/>

                <TextView
                        android:id="@+id/events_item_event_headliner_genres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/base_padding_card_default"
                        android:layout_marginStart="@dimen/base_padding_card_default"
                        android:alpha="@dimen/base_opacity_secondary"
                        tools:text="Electro House, Progressive House"
                        style="@style/AppTheme.Text.Body2"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
