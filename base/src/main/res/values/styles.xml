<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name ="Base.AppTheme.Text" parent="">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Base.AppTheme.Text.Medium" parent="">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.AppTheme.Text.Light" parent="">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Text.H1" parent="Base.AppTheme.Text.Light">
        <item name="android:textSize">96sp</item>
    </style>

    <style name="AppTheme.Text.H2" parent="Base.AppTheme.Text.Light">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="AppTheme.Text.H3" parent="Base.AppTheme.Text">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Text.H4" parent="Base.AppTheme.Text">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="AppTheme.Text.H5" parent="Base.AppTheme.Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.Text.H6" parent="Base.AppTheme.Text.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Text.Subtitle1" parent="Base.AppTheme.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Subtitle2" parent="Base.AppTheme.Text.Light">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Body1" parent="Base.AppTheme.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Body2" parent="Base.AppTheme.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Button" parent="Base.AppTheme.Text.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Caption" parent="Base.AppTheme.Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Overline" parent="Base.AppTheme.Text">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
